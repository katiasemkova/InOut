@model InOut.Models.Item
@{
    ViewData["Title"] = "Delete";
}

<h1>Update</h1>
<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden />

    <div class="row">
        <div class="col-12">
            <div class="form-group row">
                <label class="col-3 m-1 form-control" asp-for="ItemName"></label>
                <label class="col-3 m-1 form-control" asp-for="Borrower"></label>
                <label class="col-3 m-1 form-control" asp-for="Lender"></label>
            </div>


            <div class="form-group row">


                <input class="col-3 form-control m-1 " asp-for="ItemName" />
                <input class="col-3 form-control m-1" asp-for="Borrower" />
                <input class="col-3 form-control m-1" asp-for="Lender" />

            </div>

            <div class="form-group row">

                <div class="col-3 form-control m-1" />
            </div>
            <input type="submit" class=" btn btn-success m-1 col-3" value="Delete" />
            <button asp-action="Index" class=" col-3 btn btn-danger m-1">Back</button>
        </div>
    </div>


</form>


