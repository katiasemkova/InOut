@model InOut.Models.Expense
@{
    ViewData["Title"] = "Delete";
}

<form method="post" asp-action="DeletePost">
    <input asp-for="ID" hidden />
    <h1>Update expense</h1>
    <table>
        <thead>
            <tr>
                <th width="50%">Expense name</th>
                <th width="50%">Amount</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td width="50%"><input asp-for="ExpenseName" /></td>
                <td width="50%"><input asp-for="Amount" /></td>
            </tr>
            <tr>
                <td width="50%"> <input type="submit" class="btn btn-danger" value="Delete" /></td>
                <td width="50%">  <a class="btn btn-success" asp-action="Index">Back</a></td>
            </tr>
        </tbody>
    </table>
</form>

